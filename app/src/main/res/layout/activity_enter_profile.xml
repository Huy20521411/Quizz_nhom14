<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_user_input_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20px">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Please fill in your information"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintBottom_toBottomOf="@id/email_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/email_edit_text"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="90px"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/fullname_edit_text"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/classify_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classification"
        android:layout_marginTop="80px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullname_edit_text" />

    <RadioGroup
        android:id="@+id/classify_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20px"
        android:layout_marginTop="50px"
        app:layout_constraintTop_toBottomOf="@id/fullname_edit_text"
        app:layout_constraintLeft_toRightOf="@id/classify_text_view">

        <RadioButton
            android:id="@+id/gv_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GV" />

        <RadioButton
            android:id="@+id/sv_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="SV" />
    </RadioGroup>

    <TextView
        android:id="@+id/gender_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_marginTop="60px"
        app:layout_constraintLeft_toLeftOf="@id/classify_text_view"
        app:layout_constraintTop_toBottomOf="@id/classify_radio_group" />

    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30px"
        app:layout_constraintLeft_toLeftOf="@id/classify_radio_group"
        app:layout_constraintTop_toBottomOf="@id/classify_radio_group"
        app:layout_constraintBottom_toTopOf="@id/phone_edit_text">

        <RadioButton
            android:id="@+id/male_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/female_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        app:layout_constraintBaseline_toBaselineOf="@id/phone_edit_text"
        app:layout_constraintTop_toBottomOf="@id/gender_radio_group"
        app:layout_constraintStart_toStartOf="parent">

    </TextView>

    <EditText
        android:id="@+id/fullname_edit_text"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginTop="70px"
        app:layout_constraintTop_toBottomOf="@id/email_edit_text"
        app:layout_constraintLeft_toRightOf="@id/fullname_text_view"
        app:layout_constraintRight_toRightOf="parent"/>
    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="850px"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginLeft="55px"
        android:layout_marginTop="20px"
        app:layout_constraintTop_toBottomOf="@id/gender_radio_group"
        app:layout_constraintLeft_toRightOf="@id/phone_text_view" />
    <TextView
        android:id="@+id/fullname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fullname"
        app:layout_constraintTop_toTopOf="@id/fullname_edit_text"
        app:layout_constraintBottom_toBottomOf="@id/fullname_edit_text"
        app:layout_constraintLeft_toLeftOf="parent">

    </TextView>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/phone_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp">
    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>
